generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int      @id @default(autoincrement())
  email          String   @unique
  name           String
  exp            Int      @default(0)
  streak         Int      @default(0)
  total_complete Int      @default(0)
  lastCompletedAt DateTime?          // 推奨：streak計算のための最終完了日時
  posts          Task[]              // relation: User has many Tasks
  createdAt      DateTime @default(now())
}

model Task {
  id                 Int       @id @default(autoincrement())
  title              String
  priority           Priority   @default(MID)
  difficulty         Int
  status             Status     @default(TODO)
  createdAt          DateTime   @default(now())
  completedAt        DateTime?                 // optional
  totalTimesCompleted Int      @default(0)
  
  user               User      @relation(fields: [userId], references: [id])
  userId             Int

  category    Category?  @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  categoryId Int?
}

model Category {
  id        Int       @id @default(autoincrement()) 
  name      String    @unique
  tasks     Task[]
  color     String    @default("#000000") 
  createdAt DateTime  @default(now())
}

enum Priority {
  LOW
  MID
  HIGH
}

enum Status {
  TODO
  DOING
  DONE
}